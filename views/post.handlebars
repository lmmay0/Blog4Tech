<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{blog}}</p>
  <p>Created by {{user.name}} on {{format_date createdAt}}</p>
  <form class="form comment-form">
    <div class="form-group">
      <label for="comment-title">title:</label>
      <input class="form-input" type="text" id="comment-title" />
    </div>
    <div class="form-group">
      <label for="comment-blog">comment:</label>
      <textarea class="form-input" type="text" id="comment-blog"> </textarea>
    </div>

    <button id="add-comment" type="submit" class="btn btn-primary">Add comment!</button>
  </form>
</div>

<script src="/js/comment.js"></script>